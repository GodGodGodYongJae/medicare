<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/getIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_toLeftOf="@id/logoutBtn"
        android:layout_marginTop="7dp"

        />

    <ImageView
        android:id="@+id/onwifi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/wifi"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:id="@+id/nowifi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/nowifi"
        android:layout_alignParentLeft="true"
        />




    <Button
        android:id="@+id/loginpageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/palletBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/scanBtn"
        android:layout_marginBottom="40dp"
        android:text="Pallet Scan"
        android:textSize="30dp"
        />


    <Button
        android:id="@+id/scanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barcode Scan"
        android:layout_centerInParent="true"
        android:textSize="30dp"

        />

    <Button
        android:id="@+id/listBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scanBtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:text="Data List"
        android:textSize="30dp"

         />


</RelativeLayout>