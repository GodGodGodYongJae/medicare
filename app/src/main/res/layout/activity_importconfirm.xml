                    android:layout_height="wrap_content"
                    android:text="QR을 스캔 해주세요."
                    android:layout_toRightOf="@id/tv_text1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    />


