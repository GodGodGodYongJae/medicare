<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/maindrawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newMainActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <RelativeLayout
            android:id="@+id/menuBar"
            android:layout_width="match_parent"
            android:background="#4B73C5"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/menuleftbtn"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#4B73C5"
                android:scaleType="center"
                android:clickable="true"
                android:src="@drawable/menu"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/menulogo"/>

            <ImageView
                android:id="@+id/onwifi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/wifiblue"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                />

            <ImageView
                android:id="@+id/nowifi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/wifiblue_not"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >



            <GridLayout
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"



                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/import_pagebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:src="@drawable/in_warehouse_import"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/import_text"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/in_warehouse_pagebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:src="@drawable/materials_import"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/in_warehouse"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/export_pagebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:src="@drawable/materials_export"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/export_text"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/production_pagebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:src="@drawable/production_export"
                            android:layout_width="90dp"
                            android:layout_height="90dp"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/production_text"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/notimport_pagebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:src="@drawable/materials_import"
                            android:layout_width="90dp"
                            android:layout_height="90dp"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/in_warehouse"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/out_warehouse_pagebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:src="@drawable/out"
                            android:layout_width="90dp"
                            android:layout_height="90dp"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/out_warehose"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </RelativeLayout>
    </LinearLayout>

        <!--<com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|left"
            app:menu="@menu/main_navigationmenu" />-->
</androidx.drawerlayout.widget.DrawerLayout>
