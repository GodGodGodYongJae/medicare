<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:background="#4B73C5"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:clickable="true"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출  고"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:fontFamily="@font/nanumsquare_acb"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pallet 스캔"
        android:padding="10dp"
        android:textSize="19dp"
        android:fontFamily="@font/nanumsquare_acb"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="1dp"
        app:cardCornerRadius="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스캔 출고"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:fontFamily="@font/nanumsquare_acb"
                />


            <TextView
                android:id="@+id/palletBarcode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/palletScanBtn"
                android:ellipsize="end"
                android:fontFamily="@font/nanumsquare_acb"
                android:gravity="right"
                android:maxLines="1"
                android:text="Pallet를 스캔해주세요." />

            <ImageView
                android:id="@+id/exportPalletScanBtn"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:src="@drawable/scan_btn"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:paddingLeft="2dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pallet 선택 / 입력"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp"
        android:textSize="19dp"
        android:fontFamily="@font/nanumsquare_acb"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="1dp"
        app:cardCornerRadius="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:text="파렛트 번호"
                    android:textSize="17dp" />

                <!--    <view
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />-->
                <TextView
                    android:id="@+id/inputpalletBarcode"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="입력된 Pallet가 없습니다."
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="5dp">

                <EditText
                    android:id="@+id/palletNumEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="1dp"
                    android:layout_toLeftOf="@+id/exportPalletNumBtn"
                    android:ems="3"
                    android:inputType="number"
                    android:gravity="right"
                    />

                <ImageView
                    android:id="@+id/exportPalletNumBtn"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="2dp"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/inputbtn" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                >

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/ExportpalletNumSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="100dp"
                    app:ms_dropdown_max_height="300dp"
                    android:gravity="right"
                    android:layout_toLeftOf="@+id/exportPalletSelectBtn"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:layout_marginTop="7dp"

                    />

                <ImageView
                    android:id="@+id/exportPalletSelectBtn"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="2dp"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/inputbtn" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/exportSendBtn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:padding="2dp"
                    android:src="@drawable/export_btn" />

                <ImageView
                    android:id="@+id/exportResetBtn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:padding="2dp"
                    android:src="@drawable/export_reset_btn" />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>









</LinearLayout>